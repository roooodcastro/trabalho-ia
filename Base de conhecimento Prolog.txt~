participacao(x, y) :- equipe(x), categoria(y).
pilota_para(x, y) :- piloto(x), equipe(y).
piloto_de_f1(x) :- piloto(x), pilota_para(x, Equipe), participacao(Equipe, formula_1).
piloto_de_nascar(x) :- piloto(x), pilota_para(x, Equipe), participacao(Equipe, nascar).
mesma_equipe(x, y) :- piloto(x), piloto(y), pilota_para(x, Equipe), pilota_para(y, Equipe).
mesma_categoria(x, y) :- piloto(x), piloto(y), pilota_para(x, Equipe_a), pilota_para(y, Equipe_b), participacao(Equipe_a, Cat), particpacao(Equipe_b, Cat).
